<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.example.foody_recipe_app.ui.movieModels.Item" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:layout_margin="4dp"
        tools:layout_width="180dp"
        tools:layout_margin="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview"
                loadImageFromUrl="@{item.image}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/onyx_accent"
                android:minHeight="120dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:padding="5dp"
                android:text="@{item.title}"
                android:textColor="@color/white"
                android:background="@color/black"
                tools:text="Super awesome collection" />

            <LinearLayout
                android:id="@+id/delete_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTextView"
                android:background="@color/onyx_accent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorPrimary" />

                <Button
                    android:id="@+id/delete_button"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/movie_collection_list_page_delete_collection_cta" />

            </LinearLayout>


            <TextView
                android:id="@+id/total_count"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@id/titleTextView"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="-16dp"
                android:gravity="center"
                tools:text="12" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>